@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>



     //   $('#FechaNacimiento').bootstrapMaterialDatePicker({ weekStart: 0, time: false });
    $("#IdRol").select2();

    $("#MyFormModal").submit(function (event) {
        event.preventDefault();
        if (!$("#MyFormModal").valid()) {
            return false;
        }
        var model = @Html.Raw(Json.Encode(Model));
        model.fcPrimerNombre = $("#fcPrimerNombre").val();
        model.fcSegundoNombre = $("#fcSegundoNombre").val();
        model.fcPrimerApellido = $("#fcPrimerApellido").val();
        model.fcSegundoApellido = $("#fcSegundoApellido").val();
        model.fcTelefonoMovil = $("#fcTelefonoMovil").val();
        model.fcDocumentoIdentificacion = $("#fcDocumentoIdentificacion").val();
      
            model.fiIDEmpresa = $("#fiIDEmpresa").val();
      
      
        model.FechaNacimiento = $("#FechaNacimiento").val();


        model.UserName = $("#UserName").val();
        model.fcBuzondeCorreo = $("#fcBuzondeCorreo").val();
        model.IdRol = $("#IdRol").val();
        model.fcPassword = $("#fcPassword").val();
        model.ConfirmPassword = $("#ConfirmPassword").val();

        var url = '@Url.Action("CrearUsuario","Usuario")';
        if (model.fbTecnico) {
            var url = '@Url.Action("CrearTecnico","Usuario")';
        }

        $.ajax({
            url: url,
            type: 'POST',
            data: JSON.stringify({ model: model }),
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                AlertaCrear(data, "@Url.Action("Index","Usuario")");
            },
            error: function (data) {
                AlertaError();
            },
        });


    });
</script>
}

