    function ShowCreateBitacora(id) {
        VerModalConObjetoDeParametro({ idCustomer: id }, "/CustomerManagement/CreateBitacoraCustomer");
    }

    ReloadBitacora('@Model.idSolicitud');
    function ReloadBitacora(idSolicitud) {
        $.ajax({
            url: "@Url.Action("ShowBitacoraCustomer", "Prestamo")",
          //  url: '/Prestamo/ShowBitacoraCustomer',
            type: 'get',
            data: { idSolicitud: idSolicitud },
            success: function (data) {
                $("#lft-tab-Bitacora").html(data);
            },
