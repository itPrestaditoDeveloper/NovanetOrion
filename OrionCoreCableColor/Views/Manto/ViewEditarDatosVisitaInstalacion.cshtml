@model OrionCoreCableColor.Models.Solicitudes.SolicitudesViewModel
@{
    ViewBag.Title = "ViewEditarDatosVisitaInstalacion";
}

<!--Modal header-->
<div class="modal-header bg-primary-600 bg-primary-gradient">
    <h2 class="modal-title text-white">Reprogramar orden de Visita Instalacion</h2>
    <button type="button" class="close" data-dismiss="modal">
        <i class="fal fa-times-circle fa-fw fa-lg"></i>
    </button>
</div>

<!--Modal body-->
<div class="modal-body">

    <div class="panel-container" style="padding-top:12px; padding-bottom:15px;">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.IDSolicitud, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mar-btm">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fal fa-user fa-fw"></i></span>
                        </div>
                        @Html.EditorFor(model => model.IDSolicitud, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    @Html.ValidationMessageFor(model => model.IDSolicitud, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6" style="display:none">
                <div class="form-group">
                    @Html.LabelFor(model => model.IdCliente, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mar-btm">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fal fa-user fa-fw"></i></span>
                        </div>
                        @Html.EditorFor(model => model.IdCliente, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    @Html.ValidationMessageFor(model => model.IdCliente, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mar-btm">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fal fa-user fa-fw"></i></span>
                        </div>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.fiIDAgencia, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mar-btm">
                        @Html.DropDownListFor(model => model.fiIDAgencia, new SelectList(ViewBag.Listado1, "Value", "Text"), "", new { @class = "form-control", @style = "width:100%;" })

                    </div>
                    @Html.ValidationMessageFor(model => model.fiIDAgencia, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.fiIDContratista, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mar-btm">
                        @Html.DropDownListFor(model => model.fiIDContratista, new SelectList(ViewBag.Listado2, "Value", "Text"), "", new { @class = "form-control", @style = "width:100%;" })

                    </div>
                    @Html.ValidationMessageFor(model => model.fiIDContratista, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.fdFechaInstalacionAsignada, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mar-btm">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fal fa-user fa-fw"></i></span>
                        </div>
                        <input id="fdFechaInstalacionAsignada" value="@Model.fdFechaInstalacionAsignada.ToString("yyyy-MM-dd")" type="date" class="form-control" />

                    </div>
                    @Html.ValidationMessageFor(model => model.fdFechaInstalacionAsignada, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.fcComentarioOrdenIsntalacion, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mar-btm">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fal fa-user fa-fw"></i></span>
                        </div>
                        @*@Html.EditorFor(model => model.fcComentarioOrdenIsntalacion, new { htmlAttributes = new { @class = "form-control" } })*@

                        @Html.TextAreaFor(model => model.fcComentarioOrdenIsntalacion, new { @class = "form-control" })

                    </div>
                    @Html.ValidationMessageFor(model => model.fcComentarioOrdenIsntalacion, "", new { @class = "text-danger" })
                </div>
            </div>
            @*<label class="form-control-plaintext font-weight-bold">Observaciones</label>
            <input id="txtobservaciones" class="form-control mascara-enteros text-left" type="tel" style="text-align: right;">*@
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Obervacion: </label>
                    <div class="input-group mar-btm">
                        @Html.TextArea("txtobservaciones", new { @class = "form-control" })
                    </div>

                </div>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <a data-dismiss="modal" class="btn btn-default pull-left"><i class="text-lg ion-close-round"></i> Cancelar</a>
        <button class="btn btn-success" id="reiniciogeo" onclick="GuardarBitacora()"><i class="text-lg ion-checkmark-round"></i> Guardar</button>
    </div>

</div>
<script>
    $("#Nombre").prop("disabled", true);
    $("#IDSolicitud").prop("disabled", true);
    var opcion = 0;
    if (@Model.fiIDEstadoInstalacion != 2  && @Model.fiIDEstadoInstalacion != 1 ) {
        $("#fiIDAgencia").prop("disabled", true);
        $("#fiIDContratista").prop("disabled", true);
    }

    function GuardarBitacora() {
            var observaciones = $(`#txtobservaciones`).val();
            var idsol = $(`#IDSolicitud`).val();
            var idclient = $(`#IdCliente`).val();
            var FechaProgramadaInstalacion = $(`#fdFechaInstalacionAsignada`).val();
            var ComentarioInstalacion = $(`#fcComentarioOrdenIsntalacion`).val();
            var idAgencia = $("#fiIDAgencia :selected").val();
            var idAgenciaContratista = $("#fiIDContratista :selected").val();

            if ($("#txtobservaciones").val() == "") {
                ToastrWarning("Campos vacios de observacion", "Escriba un comentario");
                return false;
            }


            $.ajax({
                url: "@Url.Action("ActualizarDatosInstalacionReprogramarVisita", "Manto")",
                type: "POST",
                data: { IDSolicitud: idsol, FechaProgramadaInstalacion: FechaProgramadaInstalacion, ComentarioInstalacion: ComentarioInstalacion, idAgencia: idAgencia, idAgenciaContratista: idAgenciaContratista},
                success: function (datas) {


                        $.ajax({
                            url: "@Url.Action("GuardarBitacorahistorial", "Manto")",
                            type: "POST",
                            data: { IdSolicitud: idsol, IdCliente: idclient, Observaciones: observaciones, Opcion: 'Actualizar Visita Instalacion'},
                            success: function (respuesta) {

                                CerrarModal();
                                AlertaDinamicas(true, 'Exito', 'Actualizar Datos Visita Instalacion ', 1);

                            },
                            error: function (respuesta) {
                                AlertaDinamicas(false, 'Error', 'error Actualizar Datos Visita Instalacion', 2);
                            }
                        })

                },
                error: function (datae) {
                    AlertaDinamicas(false, 'Error', 'Error Al querer Actualizar Datos Visita Instalacion', 2);
                }
            });
    }



</script>
