                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fal fa- fa-fw"></i></span>
                    </div>
                    @Html.EditorFor(model => model.IDSolicitud, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                </div>
