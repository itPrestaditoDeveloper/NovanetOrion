                    ToastrError("Error", "Error de Red");
                },
            });
        }


        function Listado()
        {
            debugger;
            $.ajax({
                url: "@Url.Action("ListadoCuentas", "Prestamo")",
                type: "GET",
                data: { },
                //data: { IdCliente: IdCliente, IDentidad: IDentidad, IdSolicitud: IdSolicitud},
                success: function (resp) {

                    $("#txtOrigen").select2({ data: resp, width: "100%" });
                },
