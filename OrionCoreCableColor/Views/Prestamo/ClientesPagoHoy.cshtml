                    </tr>
                    <tr>
                        <th><input type="checkbox" id="selectAll" style="transform: scale(1.5);"></th>
                        <th>Acciones</th>
                        <th>Identidad</th>
                        <th>Nombre</th>
                        <th>Tipo Solocitud</th>
                        <th>Articulos</th>
                        <th>Numero de Cuota</th>
                        <th>Telefono</th>
                        <th>Cuota($)</th>
                        <th>Cuota(Lps)</th>
                        <th>Fecha Cuota</th>
                        <th>Saldo($)</th> 
                        <th>Saldo(Lps)</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

