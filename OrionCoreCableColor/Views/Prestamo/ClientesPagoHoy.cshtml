
@{
    ViewBag.Title = "ClientesPagoHoy";
}

<div class="panel">
   

    <div class="panel-hdr">
        <h2 class="panel-title"> <i class="fal fa-map fa-fw"></i>Clientes pagos por Fecha</h2>

    </div>
